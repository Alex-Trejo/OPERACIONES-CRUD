<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".view.EditarDatosActivity">

    <TextView
        android:id="@+id/txt_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Datos"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/et_cedula_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:backgroundTint="#BB86FC"
        android:hint="Ingrese número de cédula"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_editar"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/et_nombre_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:backgroundTint="#BB86FC"
        android:hint="Ingrese nombre"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_cedula_edit"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/txt_valor_vehiculo_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:backgroundTint="#BB86FC"
        android:hint="Ingrese valor del vehículo"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nombre_edit"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/txt_accidentes_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:backgroundTint="#BB86FC"
        android:hint="Ingrese número de accidentes"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_valor_vehiculo_edit"
        app:layout_constraintVertical_bias="0.1" />

    <Spinner
        android:id="@+id/sp_edad_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="#595454"
        android:backgroundTint="#B0B0B0"
        android:padding="8dp"
        android:popupBackground="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_accidentes_edit"
        app:layout_constraintVertical_bias="0.1" />

    <Spinner
        android:id="@+id/sp_modelo_edit"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="#595454"
        android:backgroundTint="#B0B0B0"
        android:padding="8dp"
        android:popupBackground="#B0B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <Button
        android:id="@+id/btn_guardar_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E88E5"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841" />

</androidx.constraintlayout.widget.ConstraintLayout>
